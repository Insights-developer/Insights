# Insights App Environment Variables

# Database Configuration
POSTGRES_URL="postgres://user:password@host:port/database"
POSTGRES_PRISMA_URL="postgres://user:password@host:port/database?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgres://user:password@host:port/database"
POSTGRES_USER="database_user"
POSTGRES_HOST="database_host"
POSTGRES_PASSWORD="database_password"
POSTGRES_DATABASE="insights_db"

# Authentication
JWT_SECRET="your-very-long-and-secure-jwt-secret-key-here"
JWT_EXPIRY="24h"
REFRESH_TOKEN_EXPIRY="7d"
COOKIE_SECRET="your-secure-cookie-secret-here"

# Email Service (Resend.com)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="noreply@lotteryanalytics.app"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development" # or "production" for production builds

# Security
ALLOWED_ORIGINS="http://localhost:3000,https://insights.lotteryanalytics.app"
ADMIN_EMAIL="admin@lotteryanalytics.app"
INITIAL_ADMIN_PASSWORD="change-this-secure-password-immediately"

# Optional: Analytics 
NEXT_PUBLIC_ANALYTICS_ID=""

# Feature Flags
NEXT_PUBLIC_FEATURE_EMAIL_VERIFICATION="true"
NEXT_PUBLIC_FEATURE_PASSWORD_RESET="true"
NEXT_PUBLIC_FEATURE_INSIGHTS_ENGINE="true"

# Development Only (remove in production)
NEXT_PUBLIC_DEV_MODE="false"
SKIP_EMAIL_VERIFICATION="false" # Set to "true" only in development
